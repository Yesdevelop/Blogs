<template id="main-home">
<div class="main-home">
    <div class="posts card">
        <% for (let i = 0; i < (posts.length < 10 ? posts.length : 10); i++) { %>
        <a class="post" href="javascript:;">
            <div class="title">
                <%= posts[i].title %>
            </div>
            <div class="info">
                <div class="date">
                    <%= posts[i].date %>
                </div>
                <div class="tag">
                    <%= posts[i].tags[0] %>
                </div>
            </div>
            <div class="preview">
                <%= posts[i].preview %>
            </div>
        </a>
        <% } %>

        <template id="post">
            <a class="post" href="javascript:;">
                <div class="title">%title</div>
                <div class="info">
                    <div class="date">%date</div>
                    <div class="tag">%tag</div>
                </div>
                <div class="preview">%preview</div>
            </a>
        </template>
    </div>
</div>
</template>
